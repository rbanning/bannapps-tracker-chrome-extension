{
  "name": "banningapps-chrome-extension",
  "version": "1.0.0",
  "description": "A sample extension built by Banning Applications",
  "repository": "https://github.com/rbanning/bannapps-tracker-chrome-extension.git",
  "scripts": {
    "clean:extension": "rimraf extension",
    "clean:dist": "rimraf dist",
    "copy:extension": "copyfiles -f dist/* extension",
    "build": "tsc && npm run clean:dist && parcel build src/html/*.html --no-source-maps",
    "postbuild": "npm run clean:extension && npm run copy:extension"
  },
  "author": "Rob Banning",
  "license": "ISC",
  "browserslist": [
    "last 1 Chrome version"
  ],
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "dotenv": "^16.0.0",
    "rimraf": "^3.0.2",
    "tslint": "^6.1.3",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "@netlify/functions": "^0.11.1",
    "@types/node": "^14.18.12",
    "airtable": "^0.11.1",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-interpolate-env": "^0.0.1",
    "parcel-plugin-static-files-copy": "^2.5.1",
    "showdown": "^1.9.1"
  }
}
